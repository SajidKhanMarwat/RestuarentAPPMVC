@{
}


<h1 class="text-center">ADD NEW DISH</h1>
<div class="container mt-5 p-3">
    <form method="post" action="Add">
        <div class="mb-3">
            <label for="" class="form-label">Dish Name</label>
            <input type="text" class="form-control" asp-for="DishName" />
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Price" />
        </div>

        <div class="mb-3">
            <label for="" class="form-label">Quantity</label>
            <input type="number" class="form-control" asp-for="Quantity" />
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Image Address</label>
            <input type="text" class="form-control" asp-for="Image" />
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Description</label>
            <textarea type="text" class="form-control" asp-for="Description"></textarea>
        </div>

        <input type="submit" class="btn btn-primary" Submit />

    </form>
</div>
