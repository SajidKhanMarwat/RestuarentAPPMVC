@using static System.Net.Mime.MediaTypeNames;
@model List<MVC_RestaurentApp.Models.Dishes>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h1 class="text-center">OUR MENU</h1>

<div class="container" style="margin-top:50px;">
    <div class="row mt">


        @foreach (var dish in Model)
        {
            <div class="col-3 mb-5">
                <div class="card-sl">
                    <div class="card-image">
                        @*https://images.pexels.com/photos/1149831/pexels-photo-1149831.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940*@
                        <img class="imgsm" src = "@dish.Image" />
                       
                    </div>

                    <a class="card-action" href="#"><i class="fa fa-heart"></i></a>
                    <div class="card-heading">
                        @dish.DishName
                    </div>
                    <div class="card-text">
                        @dish.Description
                    </div>
                    <div class="card-text">
                        Rs. @dish.Price
                    </div>
                    <a href="/Restaurent/View/@dish.DishId" class="card-button"> Check Details</a>
                </div>
            </div>
        }

    </div>
