@{
}

<h1 class="text-center">EDIT DISH ITEM</h1>
<form asp-action="SaveView">
    <div class="card float-right">
        <div class="row">
            <div class="col-sm-5">
                <img id="set_img" src="" class="d-block w-100 h-100"  alt="">
                
            </div>
            <div class="col-sm-7">
                <div class="card-block">
                    <div class="mb-3">
                        <label for="" class="form-label"><b>Dish Id</b></label>
                        <input type="text" class="form-control" asp-for="DishId" readonly/>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label"><b>Dish Name</b></label>
                        <input type="text" class="form-control" asp-for="DishName" />
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label"><b>Price</b></label>
                        <input type="text" class="form-control" asp-for="Price" />
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label"><b>Quantity</b></label>
                        <input type="text" class="form-control" asp-for="Quantity" />
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label"><b>Image Address</b></label>
                        <input id="img_add" type="text" class="form-control" asp-for="Image"/>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label"><b>Description</b></label>
                        <textarea type="text" class="form-control" asp-for="Description"></textarea> 
                   </div>
                   
                    
                    
                    <br>
                    <button type="submit" class="btn btn-success btn-sm">Update Dish</button>
                    <button type="submit" asp-controller="Restaurent" asp-action="Delete" class="btn btn-danger btn-sm">Delete Dish</button>
                    
                </div>
            </div>

        </div>
    </div>
</form>

<script>
    //$('#set_img').value = $('#img_add').value
    document.getElementById("set_img").src = document.getElementById("img_add").value;
</script>


